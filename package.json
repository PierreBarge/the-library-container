{
  "name": "the-library-container",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "vite --workspace=client",
    "build:client": "vite build --workspace=client",
    "lint:client": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0 --workspace=client",
    "preview": "vite preview --workspace=client",
    "build:server": "nest build --workspace=server",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" --workspace=server",
    "start": "nest start --workspace=server",
    "start:dev": "nest start --watch --workspace=server",
    "start:debug": "nest start --debug --watch --workspace=server",
    "start:prod": "node dist/main --workspace=server",
    "lint:server": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --workspace=server",
    "test": "jest --workspace=server",
    "test:watch": "jest --watch --workspace=server",
    "test:cov": "jest --coverage --workspace=server",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --workspace=server",
    "test:e2e": "jest --config ./test/jest-e2e.json --workspace=server",
    "migration:create": "npm run typeorm migration:create --workspace=server",
    "migration:generate": "npm run typeorm migration:generate -- -d src/config/migration.config.ts --workspace=server",
    "migration:up": "npm run typeorm migration:run -- -d src/config/migration.config.ts --workspace=server",
    "migration:down": "npm run typeorm migration:revert -- -d src/config/migration.config.ts --workspace=server",
    "typeorm": "typeorm-ts-node-commonjs --workspace=server",
    "fixtures": "fixtures-ts-node-commonjs load ./src/fixtures --dataSource=./src/config/fixtures.config.ts --workspace=server",
    "schema:drop": "npm run typeorm schema:drop -- -d ./src/config/fixtures.config.ts --workspace=server",
    "resetdb": "npm run schema:drop --workspace=server && npm run migration:up --workspace=server && npm run fixtures --workspace=server"
  }
}
